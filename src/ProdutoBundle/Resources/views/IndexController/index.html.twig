{% extends "::base.html.twig" %} 

{% block title %}Sistema Teste{% endblock %} 

{% block content %} 

    <div class="container"> 

        <div class="row"> 
 			{{ knp_pagination_render(pagination) }}
            <div class="col-lg-12">

                {% for produto in pagination %} 

                    <article class="col-lg-4">

                        <div class="thumbnail">

                            <a href="{{ path('show', { 'id': produto.id }) }}">

                                <img class="img-responsive" src="{{ asset(produto.getImgWeb) }}" alt="{{ produto.img }}" title="{{ produto.img }}"/>

                            </a> 

                            <div class="caption"> 

                                <h3><a href="{{ path('show', { 'id': produto.id }) }}">{{ produto.nome }}</a></h3> 

                                <p>Cadastrado por: {{ produto.usuario.nome }}</p> 

                                <p>{{ produto.descricao|slice(0, 45) }} ...</p>

                                <p><a href="{{ path('show', { 'id': produto.id }) }}">Leia mais...</a></p>

                            </div>

                        </div> 

                    </article>

                {% endfor %} 

            </div>

        </div> 
        {{ knp_pagination_render(pagination) }}
    </div>

{% endblock %}
